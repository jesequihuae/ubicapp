<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleBuilding"
            android:text="TITULO EDIFICIO"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageBuilding"
            android:src="@drawable/ic_buildingcolor"
            android:layout_width="250px"
            android:layout_height="250px"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/textBuilding"
            android:text="INFORMACION DE PRIEBA DEL EDIFICIO"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/buildingListMap"
            android:scrollbars="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

    </LinearLayout>

</ScrollView>
